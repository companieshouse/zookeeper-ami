[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory={{ zookeeper_install_directory }}/zookeeper
User={{ zookeeper_service_user }}
Group={{ zookeeper_service_group }}
ExecStart={{ zookeeper_install_directory }}/zookeeper/bin/zkServer.sh start {{ zookeeper_install_directory }}/zookeeper/conf/zoo.cfg
ExecStop={{ zookeeper_install_directory }}/zookeeper/bin/zkServer.sh stop {{ zookeeper_install_directory }}/zookeeper/conf/zoo.cfg
ExecReload={{ zookeeper_install_directory }}/zookeeper/bin/zkServer.sh restart {{ zookeeper_install_directory }}/zookeeper/conf/zoo.cfg
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=default.target
