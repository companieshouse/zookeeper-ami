{
    "_comment": "Variables should be populated from CI pipeline parameters",
    "variables": {
        "ami_name_prefix": "{{env `AMI_NAME_PREFIX`}}",
        "ansible_host_alias": "{{env `ANSIBLE_HOST_ALIAS`}}",
        "aws_region": "{{env `AWS_REGION`}}",
        "packer_builder_instance_type": "{{env `PACKER_BUILDER_INSTANCE_TYPE`}}",
        "packer_builder_subnet_name": "{{env `PACKER_BUILDER_SUBNET_NAME`}}",
        "packer_source_ami_filter_name": "{{env `PACKER_SOURCE_AMI_FILTER_NAME`}}",
        "packer_source_ami_filter_owner": "{{env `PACKER_SOURCE_AMI_FILTER_OWNER`}}",
        "resource_bucket_name": "{{env `RESOURCE_BUCKET_NAME`}}",
        "resource_bucket_object_prefix": "{{env `RESOURCE_BUCKET_OBJECT_PREFIX`}}",
        "ssh_username": "{{env `SSH_USERNAME`}}",
        "version": "{{env `VERSION`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `aws_profile`}}",
            "region": "{{user `aws_region`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "{{user `packer_source_ami_filter_name`}}*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "{{user `packer_source_ami_filter_owner`}}"
                ],
                "most_recent": true
            },
            "instance_type": "{{user `packer_builder_instance_type`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "{{user `ami_name_prefix`}}-{{user `version`}}",
            "subnet_filter": {
              "filters": {
                "tag:Name": "{{user `packer_builder_subnet_name`}}"
              }
            },
            "security_group_filter": {
              "filters": {
                "group-name": "packer-builders-{{user `aws_region`}}"
              }
            },
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 20,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ],
            "tags": {
                "Name": "{{user `ami_name_prefix`}}-{{user `version`}}",
                "Builder": "packer"
            },
            "snapshot_tags": {
                "Name": "{{user `ami_name_prefix`}}-snapshot-{{user `version`}}",
                "Builder": "packer"
            },
            "iam_instance_profile": "packer-builders-{{user `aws_region`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell-local",
            "inline": [
              "mkdir ./metadata"
              "printenv AWS_INSTANCE_ID > metadata/packer"
            ],
            "environment_vars": [
              "AWS_INSTANCE_ID={{build `ID`}}"
            ]
        },
        {
            "type": "ansible",
            "host_alias": "{{user `ansible_host_alias`}}",
            "extra_arguments": [
                "--extra-vars", "aws_region={{user `aws_region`}} resource_bucket_name={{user `resource_bucket_name`}} resource_bucket_object_prefix={{user `resource_bucket_object_prefix`}}"
            ],
            "playbook_file": "../ansible/playbook.yml"
        }
    ]
}
